extends ./base.jade
block content
    .container
        h4 Crear referancia a un lugar
        .right-align
            p Obligatorio <span class="red"> *</span> 
        form(action="/new-place/save" method="post" enctype="multipart/form-data")
            .form-group
                label(for="name") Nombre <span class="red">*</span>
                input(type="text" required=true placeholder="Nombre del lugar..." id="name" name="name" class="form-control")
                label(for="description")  Descripción
                textarea(placeholder="Descripción del lugar..." class="form-control" id="description" name="description")
            hr
            .form-group
                label(for="city") Ciudad
                input(type="text" placeholder="ej Gotica" class="form-control" id="city" name="city")
                label(for="zone") Zona
                input(type="text" placeholder="ej Metropolis" class="form-control" id="zone" name="zone")
                label(for="street") Calle/Avenida
                input(type="text" placeholder="ej avenida principal" class="form-control" id="street" name="street")
            hr
            .form-group
                label(for="latitude") Latitud <span class="red">*</span>
                input(type="number" required=true placeholder="ej 123.456" id="latitude" name="latitude" class="form-control" step="any")
                label(for="longitude") Longitud <span class="red">*</span>
                input(type="number" required=true placeholder="ej 123.456" id="longitude" name="longitude" class="form-control" step="any")
            hr
            .form-group 
                label(for="file") Subir Imágen
                input(type="file" id="file" name="file" class="control" accept="image/*")
            hr

            input(type="submit" value="Enviar")
